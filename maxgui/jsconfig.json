{
    "compilerOptions": {
        "baseUrl": ".",
        "allowSyntheticDefaultImports": false,
        "paths": {
            "@src/*": ["src/*"],
            "@wsSrc/*": ["workspace/src/*"],
            "@wsComps/*": ["workspace/src/components/*"],
            "@wkeComps/*": ["workspace/src/components/worksheets/*"],
            "@wsModels/*": ["workspace/src/store/orm/models/*"],
            "@share/*": ["share/*"],
            "@tests/*": ["tests/*"]
        }
    },
    "include": ["src/**/*", "workspace/**/*", "share/**/*", "tests/**/*"],
    "exclude": ["node_modules"]
}
